 */
function ES$BALANCE(
  address: EthereumAddress,
  tag?: EtherscanTag,
) {
  return [[
    esRequest_<Wei>({
      action: 'balance',
      module: 'account',
      params: {
        address: validateEthereumAddress_(address),
        tag,
      },
    }),
  ]];
}
